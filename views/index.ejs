<!--Making div class of author-->
<div class = "author">
    <!--Heading 1 and giving it a class-->
  <h1 class = "author__heading">
    Hi, I'm Ifrah!
  </h1> 
  <!--Paragraph and giving it a class as well--> 
  <p class = "author__body">
    Full Stack Developer and Writer
  </p>
</div>

<!--Image-->
<img src="/img/Me.jpg" class="hero-image" width="500" height="400">

<!--Section giving it class name as articles-->
<section class="articles">
    <!--Heading 2 and giving it a class-->
    <h2 class="articles__heading">
        Latest Posts
    </h2>

    <ul class="article-ul">
      <!--Post-->
      <% data.forEach(post => { %>
    <li>
        <a href = "/post/<%= post._id %>">
            <span>
              <%= post.title %>
            </span>
            <span class = "article-list__date">
              <%= post.createdAt %>
            </span>
        </a>
    </li> 
    <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
      <a href = "/?page=<%= nextPage %>" class = "pagination">&lt; View Older Posts</a>
    <% } %>
     
</section>
